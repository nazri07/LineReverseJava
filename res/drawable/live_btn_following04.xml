<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_green50" />
            <corners android:radius="12.5dip" />
        </shape>
    </item>
    <item android:state_checked="false" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/black05" />
            <corners android:radius="12.5dip" />
            <stroke android:width="0.6700001dip" android:color="@color/white40" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_green" />
            <corners android:radius="12.5dip" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black10" />
            <corners android:radius="12.5dip" />
            <stroke android:width="0.6700001dip" android:color="@color/white80" />
        </shape>
    </item>
</selector>