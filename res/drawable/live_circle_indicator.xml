<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item android:left="@dimen/circle_indicator_margin" android:right="@dimen/circle_indicator_margin" android:bottom="3.0dip">
                <shape android:shape="oval">
                    <solid android:color="@android:color/white" />
                    <stroke android:width="@dimen/circle_indicator_stroke_size" android:color="@android:color/white" />
                    <size android:height="8.5dip" android:width="8.5dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="@dimen/circle_indicator_margin" android:right="@dimen/circle_indicator_margin" android:bottom="3.0dip">
                <shape android:shape="oval">
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="@dimen/circle_indicator_stroke_size" android:color="@android:color/white" />
                    <size android:height="8.5dip" android:width="8.5dip" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>